{% extends 'FluzoContactBundle::layout.html.twig' %}
{% block description %}{{'Use this form for contact with Fluzo.info and I will answer as soon as possible'|trans}}{% endblock %}
{% block title %}{{'Contact'|trans}} | Fluzo.info{% endblock %}

{% block body %}
<h2 class="text-info">{{'Contact'|trans}}</h2> 
<div class="col-lg-12 col-xs-12 pull-left well">

{{ form_start(form, {'method': 'POST', 'attr': {'role': 'form', 'class': 'form-horizontal', 'novalidate':'novalidate'} }) }}
    {{ form_errors(form) }}
    <div class="form-group col-lg-8 col-xs-12">
        {{ form_label(form.name) }} 
        {{ form_widget(form.name, {'attr': {'class': 'form-control'} }) }}    
        <div class="text-danger">
        {{ form_errors(form.name) }}
        </div>
    </div> 
    <div class="clearfix"></div>
    <div class="form-group col-lg-8 col-xs-12">
        {{ form_label(form.email) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control'} }) }}
        <div class="text-danger">
        {{ form_errors(form.email) }}
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="form-group col-xs-12">
        {{ form_label(form.subject) }}
        {{ form_widget(form.subject, {'attr': {'class': 'form-control'} }) }}
        <div class="text-danger">
        {{ form_errors(form.subject) }}
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="form-group col-xs-12">
        {{ form_label(form.message) }}
        {{ form_widget(form.message, {'attr': {'class': 'form-control', 'rows': '5'} }) }}
        <div class="text-danger">
        {{ form_errors(form.message) }}
        </div>
    </div>

    <button type="submit" class="btn btn-default  pull-right">{{'Submit'|trans}}</button><br /><br />
{{ form_end(form) }}
</div>   
{% endblock %}
